{
  "version": 6,
  "configurePresets": [
    {
      "name": "ucrt-debug",
      "displayName": "MSYS2 UCRT (Debug)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ucrt/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "cmake/toolchains/msys2-ucrt.cmake"
      }
    },
    {
      "name": "ucrt-release",
      "displayName": "MSYS2 UCRT (Release)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/ucrt/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "cmake/toolchains/msys2-ucrt.cmake",
        "CMAKE_CXX_FLAGS_RELEASE": "-O3 -march=native"
      }
    },
    {
      "name": "wsl-debug",
      "displayName": "WSL2 (Debug)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/wsl/debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "cmake/toolchains/wsl2-gcc.cmake"
      }
    },
    {
      "name": "wsl-release",
      "displayName": "WSL2 (Release)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/wsl/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "cmake/toolchains/wsl2-gcc.cmake",
        "CMAKE_CXX_FLAGS_RELEASE": "-O3 -march=native"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "ucrt-debug",
      "configurePreset": "ucrt-debug"
    },
    {
      "name": "ucrt-release",
      "configurePreset": "ucrt-release"
    },
    {
      "name": "wsl-debug",
      "configurePreset": "wsl-debug"
    },
    {
      "name": "wsl-release",
      "configurePreset": "wsl-release"
    }
  ]
}
